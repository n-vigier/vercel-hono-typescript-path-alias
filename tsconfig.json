{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "paths": {
      "@service/*": [
        "./api/services/*"
      ],
      "@auth/*": [
        "./api/auth/*"
      ]
    }
  },
  "include": [
    "api",
    "services"
  ]
}
